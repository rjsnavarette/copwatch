.block-header
  .row
    .col-lg-7.col-md-6.col-sm-12
      %h2
        = content_header
        %small.text-muted
    .col-lg-5.col-md-6.col-sm-12
      %a.add-button.btn.btn-white.btn-icon.btn-round.float-right.m-l-10{:href => add_url, :class => add_btn_visibility_class}
        %i.zmdi.zmdi-plus
      %ul.breadcrumb.float-md-right
        %li.breadcrumb-item
          %a{:href => ""}
            %i.zmdi.zmdi-home
            Admin
        - if controller_name != 'pages'
          %li.breadcrumb-item
            %a{:href => page_home_url}= page_name
          %li.breadcrumb-item.active= page_action
        - else
          %li.breadcrumb-item.active= page_name
= render "admin/shared/alert"